---
import Layout from "../layouts/Layout.astro"
import Header from '../components/Header.astro';
// import Script_Quest from '../components/Script_Quest.astro';
---
<style>
    .answer-div{
        border: 1px solid rgb(187, 186, 186);
        padding: 5px;
        border-radius: 100%;
        padding: 12px 20px;
    }
    .answer-div:hover{
        cursor: pointer;
    }
</style>
    <Layout tittle="Cuestionario">
        <main class="flex justify-center items-center pt-40 ">
            <div class="bg-white w-[1000px] h-[600px] rounded-3xl shadow-2xl static">
                <div class="flex flex-col items-center justify-center h-full">
                    <div id="back" class="absolute right-1/4 top-[20%] px-3 py-2 bg-[#804422] rounded-2xl text-white hover:cursor-pointer select-none hover:bg-white hover:text-[#804422] border hover:border-[#804422] hover:scale-110 duration-150" onclick="window.location.href = 'index.html'">
                        <p>
                            Regresar
                        </p>
                    </div>
                    <div id="help" class="absolute left-1/4 top-[20%] px-5 py-2 rounded-2xl border-2 border-[#804422]  select-none">
                        <p>
                            5: Mucho | 4: Un poco | 3: MÃ¡s o menos | 2: Poco | 1: Muy Poco
                        </p>
                    </div>
                    <div class="w-2/5 text-center" id="questionid"></div>
                    <div class="h-24"></div>
                    <div class="flex justify-around w-3/4 ">
                        <div class="answer-div select-none hover:scale-125 hover:bg-[#804422] duration-150 ease-in hover:text-white font-semibold" id="ans1">1</div>
                        <div class="answer-div select-none hover:scale-125 hover:bg-[#804422] duration-150 ease-in hover:text-white font-semibold" id="ans2">2</div>
                        <div class="answer-div select-none hover:scale-125 hover:bg-[#804422] duration-150 ease-in hover:text-white font-semibold" id="ans3">3</div>
                        <div class="answer-div select-none hover:scale-125 hover:bg-[#804422] duration-150 ease-in hover:text-white font-semibold" id="ans4">4</div>
                        <div class="answer-div select-none hover:scale-125 hover:bg-[#804422] duration-150 ease-in hover:text-white font-semibold" id="ans5">5</div>
                    </div>
                    <div id="sendQuest" class=" hidden flex-col items-center">
                        <div class="text-3xl flex flex-col items-center select-none">
                            <h3>Nos alegra que hayas respondido todas las preguntas</h3>
                            <div class="h-[10px]"></div>
                            <h3>Es hora de enviar las respuestas</h3>
                        </div>
                        <div class="h-[60px]"></div>
                        <div class="inline-block">
                            <button id="send" class="bg-[#804422] text-white py-2 px-3 rounded-3xl text-xl select-none">Enviar respuestas</button>
                        </div>
                    </div>
                    <div id="mesDiv" class="hidden flex-col items-center px-32 select-none">
                        <div class="text-center">
                            <h3 id="titleMessage" class="text-3xl"></h3>
                            <div class="h-[30px]"></div>
                            <div id="message" class="">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </Layout>
    <script src="../js/quest.js"></script>
