---
import Layout from '../layouts/Layout.astro';

---

<Layout tittle='Inicia Sesion'>
    <main class="flex justify-center items-center p-32 ">
        <div class="flex justify-center bg-white h-[575px] w-[800px] rounded-xl shadow-2xl">
            <div class="w-1/2 bg-[#804422] rounded-lg">
                <img src="../../public/profesora.jpg" alt="" class="rounded-l-xl h-full w-full brightness-75 transition">
            </div>
            <div class="h-full w-1/2 flex flex-col gap-4 justify-start items-center">
                <form action="" class="flex flex-col w-2/3 gap-8 mt-24">
                    <input id="GET-email" type="email" placeholder="Correo Electronico" class="border-2 rounded-lg p-2 border-[#804422] outline-none">
                    <input type="password" id="GET-password" placeholder="ContraseÃ±a" class="border-2 rounded-lg p-2 border-[#804422] outline-none">    
                </form>
                <div class="flex justify-center gap-3">
                    <button id="inicio" class="bg-white text-[#804422] border-2 border-[#804422] pl-3 pr-3 p-1 rounded-lg mt-5  hover:text-white hover:bg-[#804422]">Volver</button>
                    <button id="iniciar" class="bg-[#804422] text-white pl-3 pr-3 p-1 rounded-lg mt-5">Iniciar</button>
                </div>
                <p class="text-[#804422]">________________________________________</p>
                <p class="text-sm">No tienes Cuenta? <a href="signup" class="text-[#804422] font-semibold">Crea Una</a></p>
            </div>
        </div>
    </main>
</Layout>
<script src="../js/validation.js"></script>